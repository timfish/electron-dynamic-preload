{
  "extends": "tslint:latest",
  "defaultSeverity": "warning",
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "ban-types": {
      "severity": "error"
    },
    "semicolon": [
      true,
      "always"
    ],
    "no-submodule-imports": [
      false
    ],
    "jsdoc-format": [
      false
    ],
    "ordered-imports": [
      true
    ],
    "max-line-length": [
      false
    ],
    "max-classes-per-file": [
      false
    ],
    "trailing-comma": [
      false
    ],
    "object-literal-shorthand": false,
    "member-ordering": [
      false
    ],
    "object-literal-sort-keys": false,
    "no-empty": false,
    "object-literal-key-quotes": [
      false
    ],
    "radix": false,
    "no-null-keyword": true,
    "triple-equals": [
      true,
      "allow-undefined-check"
    ],
    "arrow-parens": false,
    "array-type": [
      true,
      "array"
    ],
    "prefer-const": true,
    "prefer-for-of": true
  }
}
