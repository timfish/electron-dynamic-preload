{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": "./"
  },
  "include": [
    "./node_modules/electron/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
